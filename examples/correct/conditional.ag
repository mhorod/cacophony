# if without else
if false then
  true;

# simple if with else 
if true then
  false
else 
  true;

# nested conditional statement
if true then
  true 
else (
  if false then
    true
  else false
);

# conditional statement is also a value
# so we can initialize variables using it
let x: Bool = 
  if false then 
    true
  else
    false;

# statement as condition
if (if true then false else true) then
  true
else
  false;

# more nesting
if false then
  true
else (
  if false then 
    true 
  else (
    if false then 
      true
    else (
      if false then
        true
      else 
        false
    )
  )
);
