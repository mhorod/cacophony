foreign read_int: [] -> Int;
foreign write_int: [Int] -> Unit;

let collatz = [n: Int, on_even: [Int] -> Int, on_odd: [Int] -> Int] -> Unit => (
    write_int[n];

    if n == 1 then
        return

    if n % 2 == 0 then
        collatz[on_even[n], on_even, on_odd]
    else
        collatz[on_odd[n], on_even, on_odd];
);

let n = read_int[];
collatz[n, [x: Int] -> Int => x/2, [x: Int] -> Int => 3*x+1];
